{
  "name": "hitoiki-monkey",
  "description": "Talk Speed Checker with SpeechRecognition API.",
  "version": "0.0.1",
  "scripts": {
    "dev": "parcel src/index.html --hmr-port=1235",
    "build": "parcel build src/index.html",
    "server": "http-server dist -p 1234",
    "predev": "yarn copy:dict",
    "prebuild": "rm -rf dist",
    "postbuild": "yarn copy:dict",
    "copy:dict": "mkdir -p dist/dict && cp -r node_modules/kuromoji/dict/* dist/dict",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "http-server": "^0.11.1",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "sass": "^1.20.1"
  },
  "dependencies": {
    "hyperapp": "beta",
    "kuromoji": "^0.1.2"
  }
}
